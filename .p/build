sub rc_link     { '<a href="'.($_[0] // '').'candidate/">Ø§Ù„Ù…ØµØ·Ù„Ø­Ø§Øª Ø§Ù„Ù…Ø±Ø´Ø­Ø© Ù„Ù„Ø§ØªÙØ§Ù‚</a>' }
sub exper_link  { '<a href="'.($_[0] // '').'experimental/">Ø§Ù„Ù…ØµØ·Ù„Ø­Ø§Øª Ø§Ù„ØªØ¬Ø±ÙŠØ¨ÙŠØ©</a>' }
