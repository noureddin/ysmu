$1}
}mr
  ;

sub all_link    { '<a rel=index href="'.($_[0] // '').'link/">Ù‚Ø§Ø¦Ù…Ø© Ø±ÙˆØ§Ø¨Ø· Ø¬Ù…ÙŠØ¹ Ø§Ù„Ù…ØµØ·Ù„Ø­Ø§Øª</a>' }
